<Application x:Class="AppWindowsWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AppWindowsWPF"
             StartupUri="Home.xaml">
    <Application.Resources>
        
        <Style TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="DodgerBlue" />
            <Setter Property="BorderThickness" Value="3" />
        </Style>


        <Style x:Key="Title" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="75" />
        </Style>

        <Style x:Key="TitleBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="50" />
        </Style>

    </Application.Resources>
</Application>
